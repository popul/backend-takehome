{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
}